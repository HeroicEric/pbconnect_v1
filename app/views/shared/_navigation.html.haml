- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{href: "#"} Account
    %ul.dropdown-menu
      %li= link_to "Profile", user_path(current_user)
      %li= link_to "Followers", user_follows_path(current_user), :id => "account_followers"
      %li= link_to "Following", following_user_follows_path(current_user), :id => "account_following"
      %li.divider
      %li= link_to('Edit account', edit_user_registration_path)
      %li= link_to('Logout', destroy_user_session_path, :method=>'delete')
- else
  %li= link_to('Login', new_user_session_path)
  %li= link_to('Sign up', new_user_registration_path)